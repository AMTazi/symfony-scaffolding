
{% if password_reset is not defined %}

    {% set password_reset = reset_password_form.getForm().createView() %}

{% endif %}


{{ form_start(password_reset, {'attr': {'class' : 'user'}}) }}
    <h2 class="h6">Password reset</h2>

    <div class="row">
        <div class="col-sm-12 mb-3 mb-sm-0">
            {{ form_row(password_reset.oldPassword) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 mb-3 mb-sm-0">
            {{ form_row(password_reset.password) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 mb-3 mb-sm-0">
            {{ form_row(password_reset.passwordConfirmation) }}
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <button type="submit" class="btn btn-primary btn-user float-right">
            Reset
        </button>
    </div>

{{ form_end(password_reset) }}



